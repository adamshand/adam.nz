{
	"name": "adam.nz",
	"version": "0.1.0",
	"private": true,
	"packageManager": "pnpm@10.11.0",
	"scripts": {
		"start": "node index.js",
		"dev": "vite dev --host --port 5176",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"buildtar": "pnpm build && tar -cvf ./deploy.tar --exclude='*.map' ./captain-definition ./Dockerfile ./package.json ./pnpm-lock.yaml ./build/*",
		"deploytar": "caprover deploy -t ./deploy.tar",
		"deployprod": "caprover deploy -h https://captain.ruru.haume.nz -a adam-nz -b main -p $( awk -F= '/^CAPROVER_PASS=/ {print $2}' ~/.env )"
	},
	"devDependencies": {
		"@playwright/test": "^1.52.0",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.21.1",
		"@sveltejs/vite-plugin-svelte": "4.0.0-next.7",
		"@types/eslint": "^8.56.12",
		"@types/marked": "^4.3.2",
		"@types/md5": "^2.3.5",
		"@types/node": "^22.15.21",
		"eslint": "^9.27.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-perfectionist": "^2.11.0",
		"eslint-plugin-svelte": "^2.46.1",
		"html-to-image": "^1.11.13",
		"html2canvas": "^1.4.1",
		"husky": "^9.1.7",
		"just-group-by": "^2.2.0",
		"just-sort-by": "^3.2.0",
		"pocketbase": "^0.21.5",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.4.0",
		"sharp": "^0.33.5",
		"snarkdown": "^2.0.0",
		"svelte": "^5.32.1",
		"svelte-check": "^3.8.6",
		"tslib": "^2.8.1",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.32.1",
		"vite": "^5.4.19",
		"vitest": "^1.6.1"
	},
	"type": "module",
	"dependencies": {
		"stripe": "^17.7.0"
	}
}