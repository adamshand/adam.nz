{
	"name": "adam.nz",
	"version": "0.1.0",
	"private": true,
	"packageManager": "pnpm@10.11.0",
	"scripts": {
		"start": "node index.js",
		"dev": "vite dev --host --port 5176",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"buildtar": "pnpm build && tar -cvf ./deploy.tar --exclude='*.map' ./captain-definition ./Dockerfile ./package.json ./pnpm-lock.yaml ./build/*",
		"deploytar": "caprover deploy -t ./deploy.tar",
		"deployprod": "caprover deploy -h https://captain.ruru.haume.nz -a adam-nz -b main -p $( awk -F= '/^CAPROVER_PASS=/ {print $2}' ~/.env )"
	},
	"devDependencies": {
		"@playwright/test": "^1.54.1",
		"@sveltejs/adapter-node": "^5.2.13",
		"@sveltejs/kit": "^2.26.1",
		"@sveltejs/vite-plugin-svelte": "^5.1.1",
		"@types/eslint": "^8.56.12",
		"@types/marked": "^4.3.2",
		"@types/md5": "^2.3.5",
		"@types/node": "^22.17.0",
		"@types/quill": "^2.0.14",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-perfectionist": "^4.15.0",
		"eslint-plugin-svelte": "^3.11.0",
		"html-to-image": "^1.11.13",
		"html2canvas": "^1.4.1",
		"husky": "^9.1.7",
		"just-group-by": "^2.2.0",
		"just-sort-by": "^3.2.0",
		"pocketbase": "^0.26.2",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"quill": "^2.0.3",
		"sharp": "^0.33.5",
		"snarkdown": "^2.0.0",
		"svelte": "^5.37.1",
		"svelte-check": "^4.3.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.38.0",
		"vite": "^7.0.6",
		"vitest": "^3.2.4"
	},
	"type": "module",
	"dependencies": {
		"go-go-try": "^6.2.0",
		"stripe": "^17.7.0",
		"vite-node": "^3.2.4"
	}
}